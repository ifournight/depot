<p id="notice"><%= notice %></p>
<h2>Your Pragmatic Cart</h2>
<table>
  <% @cart.line_items.each do |item| %>
    <tr id='<%="line_item-#{item.id}"%>' >
      <td class="item_count"><%= item.quantity %>&times;</td>
      <td class="item_title"><%= item.product.title %></td>
      <td class="item_price"><%= number_to_currency(item.product.price) %></td>
      <td class="delete-line_item"><%= button_to 'delete', item, method: :delete %></td>
    </tr>
  <% end %>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>
<%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?'} %>